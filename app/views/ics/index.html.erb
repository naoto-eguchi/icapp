<h1>Ics</h1>

<div class="ics">
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @ics.each do |ic| %>
      <tr>
        <td><%=  image_tag ic.image  %></td>
        <td><%= ic.content %></td>
        <td><%= ic.user.name%></td>
        <td><%= link_to '詳細', ic,class: "btn btn-default" %></td>
        <% if ic.user_id == current_user.id %>
        <td><%= link_to '編集', edit_ic_path(ic),class: "btn btn-info" %></td>
        <td><%= link_to '削除', ic, method: :delete, data: { confirm: '本当に削除しますか?' } ,class: "btn btn-danger"%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  
</table>
</div>

<br>

<%= link_to 'New Ic', new_ic_path %>