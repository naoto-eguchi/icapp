<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag @ic.image %>
</p>

<p>
  <strong>Content:</strong>
  <%= @ic.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @ic.user_id %>
</p>


<% unless @ic.user == current_user %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(ic_id: @ic.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>


<%= link_to '編集', edit_ic_path(@ic) %> |
<%= link_to '戻る', ics_path %>
